srcdir = @srcdir@
VPATH = @srcdir@

BUILDTOP = ..
SRCTOP = $(srcdir)/..

include $(BUILDTOP)/Makefile.vars
include $(SRCTOP)/Makefile.rules

SOURCES = ChunkMap.cc Outline.cc
OBJS = $(SOURCES:%.cc=%.o)

all: $(OBJS)

clean:
	rm -f $(OBJS)

veryclean: clean

distclean: veryclean
	rm -f Makefile.depend

Makefile: Makefile.in config.status
	./config.status

Makefile.depend: Makefile $(SRCS)
	$(MAKEDEPEND) $(SOURCES:%=$(srcdir)/%) > $@

include Makefile.depend
