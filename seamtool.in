set -e

prefix=@prefix@
exec_prefix=@exec_prefix@
includedir=@includedir@
pkgincludedir=@includedir@/@PACKAGE@
libdir=@libdir@

DEFAULT_INCLUDES="${DEFAULT_INCLUDES}${DEFAULT_INCLUDES:+ }-I. -I${pkgincludedir}"

usage () {
    echo "Usage: $0 [OPTION]... MODE [MODE-ARG]...                   " >&2
    echo "Compilation utility for SEAM                               " >&2
    echo "                                                           " >&2
    echo "Generic options:                                           " >&2
    echo "  -h, --help       display this message and exit           " >&2
    echo "  -v, --verbose    enable verbose shell tracing            " >&2
    echo "  -V, --version    show version information and exit       " >&2
    echo "                                                           " >&2
    echo "MODE must be one of the following:                         " >&2
    echo "  compile          compile a source file                   " >&2
    echo "  link             create a library or an executable       " >&2
    echo "  config           output standard configuration options   " >&2
    echo "                                                           " >&2
    echo "MODE-ARGs vary depending on the MODE.                      " >&2
}

config_usage () {
    echo "Usage: $0 config [CONFIG-ARG]                              " >&2
    echo "Output installation paths for SEAM                         " >&2
    echo "                                                           " >&2
    echo "CONFIG-ARG must be one of the following:                   " >&2
    echo "  prefix           directory prefix for                    " >&2
    echo "                   architecture-independent files          " >&2
    echo "  exec_prefix      directory prefix for                    " >&2
    echo "                   architecture-dependent files            " >&2
    echo "  includedir       directory prefix for                    " >&2
    echo "                   C header files                          " >&2
    echo "  pkgincludedir    directory prefix for                    " >&2
    echo "                   SEAM-specific C header files            " >&2
    echo "  libdir           directory prefix for                    " >&2
    echo "                   " >&2
    echo "  seamlibdir       directory prefix for                    " >&2
    echo "                   SEAM extension modules                  " >&2
}

version () {
    echo "$0 (SEAM compilation utility) @PACKAGE_VERSION@" >&2
    echo "                                                           " >&2
    echo "Copyright (C) 2003  Programming Systems Lab                " >&2
    echo "See the source for copying conditions.                     " >&2
}

cmd () {
    if [ $verbose -ne 0 ]; then echo "$@"; fi
    "$@" || exit $?
}

if [ $# -lt 1 ]; then
    usage
    exit 2
fi

verbose=0

case "$1" in
    -h|--help)
	usage
	exit 0
	;;
    -V|--version)
	version
	exit 0
	;;
    -v|--verbose)
	verbose=1
	shift
	;;
esac

mode=$1
shift

case "$mode" in
    makedepend)
	cmd @CXX@ -M ${DEFAULT_INCLUDES} @SEAMTOOL_CXXFLAGS@ "$@"
	;;
    compile)
	cmd @CXX@ ${DEFAULT_INCLUDES} @SEAMTOOL_CXXFLAGS@ -L${libdir} "$@"
	;;
    link)
	cmd @CXX@ @SEAMTOOL_LDFLAGS@ "$@" -shared -L${libdir} -lseam
	;;
    config)
	case "$1" in
	    --help)
		config_usage
		exit 0
		;;
            prefix|exec_prefix|includedir|pkgincludedir|libdir)
		eval tmp="\$$1" && echo "'$tmp'"
                ;;
	    seamlibdir)
		echo \''${libdir}/seam'\'
		;;
	    *)
		echo "$0: unknown config option '$1'." >&2
		echo "Try '$0 config --help' for more information." >&2
		exit 2
		;;
	esac
	;;
    *)
	echo "$0: unknown mode '$mode'" >&2
	echo "Try '$0 --help' for more information." >&2
	exit 2
	;;
esac

exit 0
