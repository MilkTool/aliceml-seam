TOPDIR = ..

include $(TOPDIR)/Makefile.vars
include $(TOPDIR)/Makefile.rules

LIGHTNING_SOURCES0 = JITStore.cc

ifdef LIGHTNING
LIGHTNING_SOURCES = $(LIGHTNING_SOURCES0)
else
LIGHTNING_SOURCES =
endif

SOURCES = \
	WeakDictionary.cc Memory.cc Store.cc \
	$(LIGHTNING_SOURCES)

OBJS = $(SOURCES:%.cc=%.o)

.PHONY: all clean distclean adt

all: libstore.a

adt:
	cd $(TOPDIR)/adt && $(MAKE) clean all

libstore.a: StoreConfig.hh $(OBJS)
	ar rc libstore.a $(OBJS) || exit 1
	ranlib libstore.a

StoreConfig.hh: StoreConfig$(EXE)
	./$<

StoreConfig$(EXE): StoreConfig.o
	$(CXX) $(CXXFLAGS) -o $@ $<

$(OBJS): StoreConfig.hh

clean:
	rm -f StoreConfig.o StoreConfig StoreConfig.exe
	rm -f $(OBJS) $(LIGHTNING_SOURCES0:%.cc=%.o) libstore.a

veryclean: clean
	rm -f test libstore.a

distclean: veryclean
	rm -f StoreConfig.hh Makefile.depend

Makefile.depend: Makefile StoreConfig.hh $(SOURCES)
	$(MAKEDEPEND) $(SOURCES) StoreConfig.cc > $@

include Makefile.depend
