DEFINES = \
	-DHAVE_ZLIB=@HAVE_ZLIB@ \
	-DLIGHTNING=@HAVE_LIGHTNING@ \
	-DPROFILE=@PROFILE@
INCLUDES = -I$(SRCTOP) -I$(BUILDTOP) @ZLIBINCLUDES@ @LIGHTNINGINCLUDES@

MACHINE_FLAGS = -mcpu=pentium @SEAM_MACHINE_FLAGS@

CXX_WARNING_FLAGS = \
	-Wall -W -Wundef -Wpointer-arith -Wcast-qual -Wcast-align \
	-Wwrite-strings -Wconversion -Wredundant-decls \
	-Winline -Woverloaded-virtual -Wsign-promo

CXX_DEBUG_FLAGS = \
	-DINTERFACE -DDEBUG_CHECK -DSTORE_DEBUG -DJAVA_INTERPRETER_DEBUG \
	-fno-inline-functions -fimplement-inlines -ggdb

CXX_OPTIMIZE_FLAGS = \
	-pipe -march=pentium3 -O3 -fomit-frame-pointer \
	-fforce-mem -fforce-addr -finline-limit=2500 \
	-fno-implement-inlines -fno-keep-static-consts \
	-fno-implicit-templates -fno-implicit-inline-templates

CXX = @CXX@ $(MACHINE_FLAGS)

#CXXFLAGS = $(CXX_WARNING_FLAGS) $(CXX_DEBUG_FLAGS)
CXXFLAGS = $(CXX_WARNING_FLAGS) $(CXX_OPTIMIZE_FLAGS)

LD = @CXX@ $(MACHINE_FLAGS)
LD_DEBUG_FLAGS = 
LD_OPTIMIZE_FLAGS = -Wl,-S

#LDFLAGS = $(MACHINE_FLAGS) $(LD_DEBUG_FLAGS) @SEAM_LDFLAGS@
LDFLAGS = $(LD_OPTIMIZE_FLAGS) @SEAM_LDFLAGS@

LIBS = @SEAM_LIBS@ @ZLIBLIBS@

MAKEDEPEND = $(CXX) -M $(DEFINES) $(INCLUDES)
